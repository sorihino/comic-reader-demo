generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Page {
  id         String     @id
  url        String
  pageNumber Int
  episodeId  String
  episode    Episode @relation(fields: [episodeId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model Episode {
  id            String @id
  title         String
  seriesId      String
  episodeNumber Int
  series        Series @relation(fields: [seriesId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  pages         Page[]
}

model Series {
  id       String    @id
  title    String
  episodes Episode[]
}
